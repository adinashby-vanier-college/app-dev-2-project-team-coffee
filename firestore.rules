rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can read other users' documents (for searching and viewing friends)
      // This covers both individual document reads (get) and queries (list)
      allow read: if isAuthenticated();
      
      // Users can create their own document
      allow create: if isOwner(userId);
      
      // Users can update their own document (including friends list and savedLocations)
      allow update: if isOwner(userId);
      
      // Users can update another user's document to add themselves to their friends list
      // This is needed when accepting a friend request - only allow updating the friends field
      allow update: if isAuthenticated() && 
        request.auth.uid != userId &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friends']) &&
        request.resource.data.friends is list;
      
      // Users cannot delete their own document
      allow delete: if false;
      
      // Notifications subcollection
      match /notifications/{notificationId} {
        // Users can read their own notifications
        allow read: if isOwner(userId);
        
        // Users can create notifications for themselves (system-generated)
        allow create: if isOwner(userId);
        
        // Users can update their own notifications (mark as read)
        allow update: if isOwner(userId) &&
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead']);
        
        // Users can delete their own notifications
        allow delete: if isOwner(userId);
      }
    }
    
    // Friend requests collection
    match /friendRequests/{requestId} {
      // Users can read friend requests where they are the sender or receiver
      allow read: if isAuthenticated() && 
        (resource.data.fromUid == request.auth.uid || 
         resource.data.toUid == request.auth.uid);
      
      // Users can create friend requests where they are the sender
      allow create: if isAuthenticated() && 
        request.resource.data.fromUid == request.auth.uid;
      
      // Users can update friend requests where they are the receiver (to accept/decline)
      // Only allow updating the status field
      allow update: if isAuthenticated() && 
        resource.data.toUid == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']) &&
        request.resource.data.status is string;
      
      // Users cannot delete friend requests directly
      allow delete: if false;
    }
    
    // Locations collection
    match /locations/{locationId} {
      // Locations are publicly readable (anyone can view locations)
      allow read: if true;
      
      // Only authenticated users can create/update locations
      // This allows the app to upload location data during initialization
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      
      // Locations should not be deleted (or only by admins in the future)
      allow delete: if false;
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read conversations they are part of
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      
      // Users can create conversations where they are a participant
      allow create: if isAuthenticated() && 
        request.auth.uid in request.resource.data.participants &&
        request.resource.data.participants is list &&
        request.resource.data.participants.size() == 2;
      
      // Users can update conversations they are part of (for lastMessage updates)
      allow update: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in conversations they are part of
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        // Users can create messages in conversations they are part of
        allow create: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
        
        // Users can update their own messages or messages sent to them (for read status)
        allow update: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          (resource.data.senderId == request.auth.uid || 
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['read', 'readAt']));
      }
    }
    
    // Moments collection
    match /moments/{momentId} {
      // Allow reading moments if:
      // 1. User is authenticated and created the moment
      // 2. User is authenticated and is invited
      // 3. User is authenticated (allows friends who received via chat to view)
      // 4. Moment has a shareCode (for web form access - allows unauthenticated reads)
      allow read: if isAuthenticated() || resource.data.shareCode != null;
      
      // Authenticated users can create moments (must be the creator)
      allow create: if isAuthenticated() && 
        request.resource.data.createdBy == request.auth.uid;
      
      // Users can update moments they created (full update)
      allow update: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
      
      // Authenticated users can update their own response in the responses map
      // This allows friends who received the moment via chat to RSVP
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['responses']) &&
        request.resource.data.responses is map &&
        request.resource.data.responses[request.auth.uid] is string;
      
      // Creator or invited friends can update invitedFriends or shareCode
      allow update: if isAuthenticated() && 
        (resource.data.createdBy == request.auth.uid ||
         request.auth.uid in resource.data.invitedFriends) &&
        request.resource.data.diff(resource.data).affectedKeys().hasAny(['invitedFriends', 'shareCode']);
      
      // Allow updating guestResponses for moments with shareCode (for web form RSVP)
      // This allows unauthenticated users to submit RSVPs via the web form
      allow update: if resource.data.shareCode != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['guestResponses']) &&
        request.resource.data.guestResponses is list;
      
      // Only the creator can delete moments
      allow delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }
  }
}
